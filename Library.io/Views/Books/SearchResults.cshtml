@model IEnumerable<Library.io.Models.Book>

@{
    ViewData["Title"] = "Search Results";
}

@if (Model.Count() == 0)
{
    <div>
        <h2>No books found</h2>
    </div>

}
else
{
    <h2>Books list</h2>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Authors)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Available)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ISBN)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edition)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Authors)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Available)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ISBN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edition)
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        }
                        else
                        {
                            <a class="btn btn-sm btn-success" asp-action="Rent" asp-route-id="@item.ID">Rent</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
